# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env for local development.
# ============================================================================


# ============================================================================
# GITHUB (GHCR Image Pulls) - For Deployment
# ============================================================================
GITHUB_TOKEN=ghp_your_token_here
DEPLOY_GITHUB_OWNER=yourusername
DEPLOY_REGISTRY=ghcr.io/yourusername


# ============================================================================
# DEPLOYMENT IDENTITY
# ============================================================================
DEPLOY_SERVICE_NAME=myapp
DEPLOY_NAMESPACE=myapp
DEPLOY_DOMAIN=app.example.com


# ============================================================================
# BUILD-TIME VITE VARIABLES
# ============================================================================
# Baked into the React build at Docker image creation time
VITE_DATABASE_API_URL=https://api.example.com
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
